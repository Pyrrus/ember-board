<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>
        Question
      </th>
      <th>
        Author
      </th>
      <th>
        Edit?
      </th>
      <th>
        Delete?
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each questions as |question|}}
      <tr>
        <td class="col-xs-5">
          {{#link-to 'view' question.id}}<p>{{question.question}}</p>{{/link-to}}
        </td>
        <td>
          {{#link-to 'view' question.id}}<p>{{question.author}}</p>{{/link-to}}
        </td>
        <td class="col-xs-1">
          {{#link-to 'edit' question.id}}<button class='btn btn-success btn-sm'><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>{{/link-to}}
        </td>
        <td class="col-xs-1">
          <button class="btn btn-danger btn-sm" {{action 'deleteQuestion' question}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </td>
      </tr>
      {{else}}
        <tr>
          <td><h2>There are no question on the site</h2></td>
        </tr>
    {{/each}}
  </tbody>
</table>