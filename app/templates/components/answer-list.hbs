<div class="row">
	{{#each answers as |answer|}}
	 <div class="col-md-4">
	  <div class="panel question">
	  	<div class="panel-heading"><h2>Answer</h2></div>
	  	<div class="panel-body">{{{answer.answer}}}</div>
	    <div class="panel-footer">
	    	By {{answer.author}} 
	    	<span class="pull-right">
	    		<a href="#" {{action "addLike" answer.like answer 'up'}}>
	    			<i class="fa fa-thumbs-up" aria-hidden="true"></i>
	    		</a>
	    		<span class="numberAnswer">{{answer.like}}</span>
	    		<a href="#" {{action "addLike" answer.like answer 'down'}}>
	    			<i class="fa fa-thumbs-down" aria-hidden="true"></i>
	    		</a>
	    	</span>
	    </div>
	  </div>
	 </div>
	 {{else}}
	 	<div class="col-md-12">
		  <div class="panel question">
		  	<div class="panel-heading"><h2>Answer</h2></div>
		  	<div class="panel-body">There are no answer yet on the quesiton</div>
		    <div class="panel-footer">By Admin</div>
		  </div>
		 </div>
	{{/each}}
</div>