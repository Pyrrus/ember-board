<h1>Edit {{model.question}}</h1>
<div>
  <form>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=model.question class="form-control" id="question"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=model.author class="form-control" id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{tinymce-editor options=options id="moreinfo" class="form-control" value=model.moreinfo}}
    </div>

    <button {{action 'update' model}}>Save</button>
  </form>
</div>